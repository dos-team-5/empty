      body {
        font-family: 'Poppins', sans-serif;
        background-color: #ffffff;
        margin: 0;
        padding: 0;
        color: #000000;
      }
      h1,
      h2,
      h3 {
        font-family: 'Sora', sans-serif;
        color: #d482b6;
      }
      .container {
        width: 100%;
        max-width: 600px;
        margin: 40px auto;
        background-color: #ffffff;
        border: 1px solid #eee;
        border-radius: 8px;
        padding: 40px;
      }
      .logo {
        width: 150px;
        margin-bottom: 30px;
      }
      .footer {
        text-align: center;
        font-size: 12px;
